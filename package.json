{
  "name": "nova-utils",
  "description": "Modular collection of utilities",
  "scripts": {
    "lint": "eslint --parser babel-eslint packages/**/*.js --fix",
    "test": "jest",
    "coverage": "jest --coverage",
    "docs": "documentation build packages/**/src/*.js -f html -o docs",
    "update": "lernaupdate",
    "publish-packages": "./publish.sh"
  },
  "devDependencies": {
    "babel-eslint": "10.0.2",
    "babel-preset-env": "1.7.0",
    "documentation": "11.0.1",
    "eslint": "5.16.0",
    "eslint-config-nitpicky": "4.0.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-promise": "4.2.1",
    "jest": "24.8.0",
    "lerna": "3.15.0",
    "lerna-update-wizard": "0.14.0",
    "prettier": "1.18.2"
  }
}
